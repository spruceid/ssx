{
  "name": "ssx",
  "version": "1.0.0",
  "repository": "ssh://git@github.com:spruceid/ssx.git",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "postinstall": "npm run clean && npm run build:packages",
    "build": "lerna run build",
    "build:packages": "lerna run --ignore \"ssx-test-*\" build",
    "build:examples": "lerna run --scope \"ssx-test-*\" build",
    "clean": "lerna run clean",
    "reset": "rm -rf node_modules packages/**/dist packages/**/node_modules examples/**/dist examples/**/node_modules examples/**/.next",
    "test": "jest --config ./.jest.config.ts --runInBand --detectOpenHandles --forceExit",
    "lint": "eslint . --ignore-path .gitignore --ext .ts,.tsx,.js",
    "lint:fix": "yarn lint --fix",
    "documentation": "lerna run doc && yarn documentation:reference",
    "documentation:reference": "node scripts/build-docs.js",
    "bootstrap": "lerna bootstrap",
    "examples": "concurrently \"yarn test-dapp start\" \"yarn express-api start\"",
    "graph": "nx graph",
    "gnosis": "yarn workspace @spruceid/ssx-gnosis-extension",
    "sdk": "yarn workspace @spruceid/ssx",
    "react": "yarn workspace @spruceid/ssx-react",
    "core": "yarn workspace @spruceid/ssx-core",
    "authjs": "yarn workspace @spruceid/ssx-authjs",
    "server": "yarn workspace @spruceid/ssx-server",
    "serverless": "yarn workspace @spruceid/ssx-serverless",
    "test-dapp": "yarn workspace ssx-test-dapp",
    "react-dapp": "yarn workspace ssx-test-wagmi-react-dapp",
    "nextauth-dapp": "yarn workspace ssx-test-nextauth",
    "express-api": "yarn workspace ssx-test-express-api",
    "http-api": "yarn workspace ssx-test-http-api",
    "serverless-dynamodb-api": "yarn workspace ssx-test-serverless-dynamodb-api",
    "start:test-dapp": "yarn test-dapp start",
    "start:test-api": "yarn express-api start",
    "prepare-release": "changeset version",
    "publish-packages": "yarn reset && yarn install && yarn build && changeset publish",
    "test:e2e": "start-test 'yarn start:test-dapp' 3000 'SSX_SIGNING_KEY=test_key yarn start:test-api' 3001 'SECRET_WORDS=\"test test test test test test test test test test test junk\" synpress run'"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.0",
    "@synthetixio/synpress": "^3.0.5",
    "@types/jest": "^29.2.3",
    "concurrently": "^7.3.0",
    "cypress": "^11.0.1",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eth-testing": "^1.1.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "lerna": "^5.1.2",
    "nx": "^14.5.4",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^1.14.0",
    "supertest": "^6.3.2",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.0",
    "typescript": "^4.8.4",
    "yarn": "^1.22.19"
  },
  "resolutions": {
    "html-webpack-plugin": "^5.0.0"
  },
  "packageManager": "yarn@3.2.0"
}
